[push]
    default = simple
[branch]
    autosetuprebase = always

[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[icdiff]
    options = --highlight --line-numbers
[hub]
    host = cc-github.bmwgroup.net
[commit]
    gpgsign = true

[gitreview]
    username = felix.schmidt
    email = felix.fs.schmidt@bmw.de
    name = Felix Schmidt

[alias]
    last = log -1 HEAD
    co = checkout
    br = branch
    ci = commit
    cia = commit --amend
    cian = commit --amend --no-edit
    st = status
    ln = log --graph --decorate
    lo = log --graph --oneline
    po = push origin
    pof = push -f origin

[include]
    path = ~/.gitconfig_local
