alias ls='colorls'
alias ll='colorls -lA'
alias ptg='git push origin HEAD:refs/for/master'
alias git='LANG=en_GB git'
alias weekly="git log --oneline --author 'Felix' --since=1.weeks --no-merges"
alias sourcetree='open -a SourceTree ./'
alias pr='hub pull-request'

# Always start VS Code in the current directory by default
alias code='code .'

# Custom tree commands
alias tree="tree -F"
# python repositories
alias pytree="tree -a -F -I '.git|*.pyc|__pycache__|*.egg-info|.eggs|.tox|.pytest_cache|htmlcov|build|dist|node_modules'"
